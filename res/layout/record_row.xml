<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:stretchColumns="1" xmlns:app1="http://schemas.android.com/apk/res/com.whereone.groupwalletcake">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >

        <TextView
            android:id="@+id/record_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:text="amount"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/record_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="2dp"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif-thin"
            android:gravity="right"
            android:text="date"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <com.makeramen.RoundedImageView
                android:id="@+id/record_owedImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:src="@drawable/ic_user"
                app:corner_radius="5dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:orientation="vertical" >

                <com.whereone.groupWallet.customAdapters.AutoResizeTextView
                    android:id="@+id/record_owedName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:maxLines="1"
                    android:text="owedName"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.whereone.groupWallet.customAdapters.AutoResizeTextView
                    android:id="@+id/record_owedFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:maxLines="1"
                    android:text="firstName"
                    android:textSize="10sp" />

                <com.whereone.groupWallet.customAdapters.AutoResizeTextView
                    android:id="@+id/record_owedLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:maxLines="1"
                    android:text="lastName"
                    android:textSize="10sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/wallet_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:text="PAID FOR"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:orientation="vertical" >

                <com.whereone.groupWallet.customAdapters.AutoResizeTextView
                    android:id="@+id/record_oweName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="oweName"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.whereone.groupWallet.customAdapters.AutoResizeTextView
                    android:id="@+id/record_oweFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="sans-serif-thin"
                    android:maxLines="1"
                    android:text="firstName"
                    android:textSize="10sp" />

                <com.whereone.groupWallet.customAdapters.AutoResizeTextView
                    android:id="@+id/record_oweLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="sans-serif-thin"
                    android:maxLines="1"
                    android:text="lastName"
                    android:textSize="10sp" />

            </LinearLayout>

            <com.makeramen.RoundedImageView
                android:id="@+id/record_oweImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:src="@drawable/ic_user"
                app:corner_radius="5dp" />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >

        <TextView
            android:id="@+id/record_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:text="comments"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </TableRow>

</TableLayout>
